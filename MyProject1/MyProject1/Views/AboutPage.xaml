<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject1.Views.AboutPage"
             BackgroundColor="MediumVioletRed"
             Title="About">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="This app was developed by Christopher Salvaggio."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="readBlog"
                    Text="Read My Blog"
                    Clicked="readBlog_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>